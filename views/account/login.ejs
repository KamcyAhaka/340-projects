<% if (title) { %>
  <h1 class="center-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>


<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
<% } %>

<div class="form-container">
  <form action="/account/login" method="POST" class="account-form">
    <div class="input-container">
      <label for="account_email">
        Email:
      </label>
      <input type="email" name="account_email"
      value="<%= locals.account_email %>"
      required placeholder="Enter a valid email address">
    </div>
    <div class="input-container">
      <label for="account_password">
        Password:
      </label>
      <input type="password" id="account_password" name="account_password"
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      required />
      <button class="show-password-btn">Show</button>
    </div>
    <button type="submit" class="submit-btn">Login</button>
  </form>

  <p class="no-account">
    No account? <a href="/account/register">Sign-up</a>
  </p>
</div>
