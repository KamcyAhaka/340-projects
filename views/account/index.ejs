<% if (title) { %>
  <h1 class="center-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>


<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
<% } %>

<div class="account-page-content center-title">
  <div class="account-update-information">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
  </div>

  <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <div class="inventory-management-container">
      <h3>Inventory Management</h3>
      <p><a href="/inv">Manage Inventory</a></p>
    </div>
  <% } %>
  
  <div class="reviews-container">
    <h3>My Reviews</h3>
    <%- reviews %>
  </div>
</div>
