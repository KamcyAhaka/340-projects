<% if (title) { %>
  <h1 class="center-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>


<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
<% } %>

<div class="form-container">
  <form action="/account/register" method="POST" class="account-form">
    <div class="input-container">
      <label for="account_firstname">
        First name:
      </label>
      <input type="text" id="account_firstname" name="account_firstname" required />
    </div>
    <div class="input-container">
      <label for="account_lastname">
        Last name:
      </label>
      <input type="text" id="account_lastname" name="account_lastname" required />
    </div>
    <div class="input-container">
      <label for="account_email">
        Email:
      </label>
      <input type="email" name="account_email" required placeholder="Enter a valid email address">
    </div>
    <div class="input-container">
      <label for="account_password">
        Password:
      </label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
      <input type="password" id="account_password" name="account_password"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      required />
      <button class="show-password-btn">Show</button>
    </div>
    <button type="submit" class="submit-btn">Login</button>
  </form>

  <p class="no-account">
    Already have an account? <a href="/account/login">Login</a>
  </p>
</div>
