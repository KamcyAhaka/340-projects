<% if (title) { %>
  <h1 class="center-title"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
<% } %>

<div class="form-container">
  <form action="/inv/update-inventory" method="POST" class="inventory-form">
    
    <div class="input-container">
      <label for="inv_make">
        Make:
      </label>
      <input type="text" id="inv_make" name="inv_make" 
        value="<%= locals.inv_make || '' %>" required />
    </div>

    <div class="input-container">
      <label for="inv_model">
        Model:
      </label>
      <input type="text" id="inv_model" name="inv_model" 
        value="<%= locals.inv_model || '' %>" required />
    </div>

    <div class="input-container">
      <label for="inv_year">
        Year:
      </label>
      <input type="number" id="inv_year" name="inv_year" 
        value="<%= locals.inv_year || '' %>" 
        pattern="^(19|20)\d{2}$"
        min="1900" max="2100" required />
    </div>

    <div class="input-container">
      <label for="inv_description">
        Description:
      </label>
      <textarea id="inv_description" name="inv_description" 
        rows="4" required><%= locals.inv_description || '' %></textarea>
    </div>

    <div class="input-container">
      <label for="inv_image">
        Image Path:
      </label>
      <input type="text" id="inv_image" name="inv_image" 
        value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>" required />
      <span>Path to vehicle image</span>
    </div>

    <div class="input-container">
      <label for="inv_thumbnail">
        Thumbnail Path:
      </label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" 
        value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" required />
      <span>Path to vehicle thumbnail</span>
    </div>

    <div class="input-container">
      <label for="inv_price">
        Price:
      </label>
      <input type="number" id="inv_price" name="inv_price" 
        value="<%= locals.inv_price || '' %>" 
        pattern="^[0-9]+$"
        min="0" required />
    </div>

    <div class="input-container">
      <label for="inv_miles">
        Miles:
      </label>
      <input type="number" id="inv_miles" name="inv_miles" 
        value="<%= locals.inv_miles || '' %>" 
        pattern="^[0-9]+$"
        min="0" required />
    </div>

    <div class="input-container">
      <label for="inv_color">
        Color:
      </label>
      <input type="text" id="inv_color" name="inv_color" 
        value="<%= locals.inv_color || '' %>" required />
    </div>

    <div class="input-container">
      <label for="classificationList">
        Classification:
      </label>
      <%- classificationList %>
    </div>

    <button type="submit" class="submit-btn">Edit Vehicle</button>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</div>
